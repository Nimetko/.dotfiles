{
  "global": {
    "check_for_updates_on_startup": true,
    "show_in_menu_bar": true,
    "show_profile_name_in_menu_bar": false
  },
  "profiles": [
    {
      "name": "Default profile",
      "selected": true,
      "virtual_hid_keyboard": {
        "keyboard_type": "ansi",
        "country_code": 0
      },
      "complex_modifications": {
        "parameters": {
          "basic.to_if_alone_timeout_milliseconds": 200
        },
        "rules": [
          {
            "description": "Vim-style HJKL arrow navigation (hold F as leader)",
            "manipulators": [
              {
                "type": "basic",
                "from": {
                  "key_code": "f",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "parameters": {
                  "basic.simultaneous_threshold_milliseconds": 500
                },
                "to": [
                  {
                    "set_variable": {
                      "name": "vim_nav_mode",
                      "value": 1
                    }
                  }
                ],
                "to_after_key_up": [
                  {
                    "set_variable": {
                      "name": "vim_nav_mode",
                      "value": 0
                    }
                  }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "vim_nav_mode",
                    "value": 0
                  }
                ]
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "h",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "left_arrow"
                  }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "vim_nav_mode",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "j",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "down_arrow"
                  }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "vim_nav_mode",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "k",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "up_arrow"
                  }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "vim_nav_mode",
                    "value": 1
                  }
                ]
              },
              {
                "type": "basic",
                "from": {
                  "key_code": "l",
                  "modifiers": {
                    "optional": [
                      "any"
                    ]
                  }
                },
                "to": [
                  {
                    "key_code": "right_arrow"
                  }
                ],
                "conditions": [
                  {
                    "type": "variable_if",
                    "name": "vim_nav_mode",
                    "value": 1
                  }
                ]
              }
            ]
          }
        ]
      }
    }
  ]
}
